{
  "compilerOptions": {
    // "baseUrl": "./frontend",
    "outDir": "build",
    "module": "esnext",
    "target": "ES2021",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": { "*": ["./frontend/*", "./frontend/js/*"], 
      "assets/*": ["frontend/assets/*"],
      "js/hooks/*": ["frontend/js/hooks/*"],
      "js/components/ui/*": ["frontend/js/components/ui/*"],
      "js/lib/utils/*": ["frontend/js/lib/utils/*"] },
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "jest-axe"]
  },
  "include": ["./frontend/**/*.ts", "./frontend/**/*.tsx"],
  "exclude": ["node_modules", "build", "frontend/**/*.js", "frontend/**/*.jsx"]
}
